<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"

    tools:context=".FirstActivity">

    <ImageView
        android:id="@+id/addimg"
        android:layout_width="82dp"
        android:layout_height="127dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="188dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:onClick="goToSecondActivity"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/addtext"
        android:layout_width="262dp"
        android:layout_height="116dp"
        android:layout_marginTop="208dp"
        android:fontFamily="cursive"
        android:onClick="goToSecondActivity"
        android:text="Add  a new section"
        android:textColor="#3b5998"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toEndOf="@+id/addimg"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="88dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="60dp"
        android:onClick="goToSections"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addimg"
        app:srcCompat="@drawable/view" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="281dp"
        android:layout_height="173dp"
        android:layout_marginTop="284dp"
        android:fontFamily="cursive"
        android:onClick="goToSections"
        android:text="View existing sections"
        android:textColor="#3B5998"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="427dp"
        android:layout_height="102dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#3b5998"
        android:fontFamily="cursive"
        android:gravity="center_horizontal|center_vertical"
        android:text="Smart Attendance"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>