<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HandleImageActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="427dp"
        android:layout_height="102dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#3b5998"
        android:fontFamily="cursive"
        android:gravity="center_horizontal|center_vertical"
        android:text="Smart Attendance"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="151dp"
        android:layout_height="89dp"
        android:background="#3b5998"
        android:fontFamily="cursive"
        android:onClick="backToCamera"
        android:text="Take Another Image"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/idNo"
        android:layout_width="234dp"
        android:layout_height="98dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Enter expected no of id cards"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="208dp"
        android:layout_height="62dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="And"
        android:textColor="#3B5998"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idNo" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="208dp"
        android:layout_height="72dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Or are you .."
        android:textColor="#3B5998"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="151dp"
        android:layout_height="89dp"
        android:background="#3B5998"
        android:fontFamily="cursive"
        android:onClick="backToHome"
        android:text="Done?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

</androidx.constraintlayout.widget.ConstraintLayout>